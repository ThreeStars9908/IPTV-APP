<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/header"
        android:background="@color/lb_page_indicator_dot"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip">
            <Button
                android:textStyle="bold"
                android:id="@+id/searcher"
                android:background="@drawable/selector_canales"
                android:paddingLeft="8.0dip"
                android:nextFocusLeft="@id/country_btn"
                android:nextFocusRight="@id/fullscreen"
                android:nextFocusDown="@id/lista"
                android:layout_width="100.0dip"
                android:layout_height="27.0dip"
                android:layout_marginTop="14.0dip"
                android:text="@string/buscar"
                android:drawableStart="@drawable/lb_ic_in_app_search"
                android:layout_marginStart="16.0dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/fullscreen"
                android:background="@drawable/selector_canales"
                android:nextFocusLeft="@id/searcher"
                android:nextFocusRight="@id/categories_btn"
                android:nextFocusDown="@id/lista"
                android:layout_width="45.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="16.0dip"
                android:src="@drawable/lb_ic_pip"
                android:layout_marginStart="20.0dip"
                app:layout_constraintStart_toEndOf="@id/searcher"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/categories_btn"
                android:background="@drawable/selector_canales"
                android:paddingLeft="8.0dip"
                android:focusable="true"
                android:nextFocusLeft="@id/fullscreen"
                android:nextFocusRight="@id/country_btn"
                android:nextFocusDown="@id/lista"
                android:layout_width="130.0dip"
                android:layout_height="27.0dip"
                android:layout_marginTop="14.0dip"
                android:text="@string/categorias"
                android:drawableStart="@drawable/cate"
                android:layout_marginStart="20.0dip"
                app:layout_constraintStart_toEndOf="@id/fullscreen"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/country_btn"
                android:background="@drawable/selector_canales"
                android:paddingLeft="8.0dip"
                android:focusable="true"
                android:nextFocusLeft="@id/categories_btn"
                android:nextFocusRight="@id/favBTN"
                android:nextFocusDown="@id/lista"
                android:layout_width="wrap_content"
                android:layout_height="27.0dip"
                android:layout_marginTop="12.0dip"
                android:text="@string/pais"
                android:drawableStart="@drawable/ic_flag_black_24dp"
                android:layout_marginStart="20.0dip"
                app:layout_constraintStart_toEndOf="@id/categories_btn"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="107.0dip"
            android:layout_height="43.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="0.0dip"
            android:src="@drawable/title_android_tv"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:background="@color/negro_gris"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0.0dip"
        android:layout_below="@id/header"
        android:layout_marginStart="0.0dip"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/slide"
            android:background="@color/gris31"
            android:layout_width="440.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/lista"
                android:background="@color/gris31"
                android:focusable="true"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/panelDerecho"
            android:background="@color/negro"
            android:layout_width="522.0dip"
            android:layout_height="340.0dip"
            app:layout_constraintStart_toEndOf="@id/slide"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/video_view2"
                android:background="@color/negro"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/side_title"
                android:keepScreenOn="true"
                app:use_controller="false"
                tools:ignore="MissingClass">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:id="@+id/MSGVIDEO"
                    android:layout_width="283.0dip"
                    android:layout_height="87.0dip">
                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/exo_player_progress_bar"
                        android:layout_width="30.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginStart="124.0dip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/msgLoading"
                        android:layout_width="fill_parent"
                        android:layout_height="26.0dip"
                        android:layout_marginTop="4.0dip"
                        android:text="Cargando Transmision, Por Favor Espere..."
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/exo_player_progress_bar" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/preview_info"
                    android:background="@drawable/shaper2"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_alignBottom="@id/video_view2"
                    app:layout_constraintTop_toBottomOf="parent">
                    <TextView
                        android:textSize="60.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/selected_background"
                        android:id="@+id/canal_number"
                        android:layout_width="wrap_content"
                        android:layout_height="60.0dip"
                        android:text="0"
                        android:includeFontPadding="false"
                        android:layout_marginStart="36.0dip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/logo_actual"
                        android:layout_width="42.0dip"
                        android:layout_height="48.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginStart="12.0dip"
                        app:layout_constraintStart_toEndOf="@id/canal_number"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:layout_width="128.0dip"
                        android:layout_height="85.0dip"
                        android:layout_marginTop="8.0dip"
                        android:src="@drawable/title_android_tv"
                        android:layout_marginEnd="32.0dip"
                        android:layout_alignParentEnd="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:textSize="40.0sp"
                        android:textStyle="bold"
                        android:id="@+id/canal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="48.0dip"
                        android:layout_marginTop="8.0dip"
                        android:text="Canal"
                        android:layout_marginStart="16.0dip"
                        app:layout_constraintStart_toEndOf="@id/logo_actual"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:textSize="20.0sp"
                        android:textStyle="bold"
                        android:id="@+id/fechaHora"
                        android:layout_width="260.0dip"
                        android:layout_height="21.0dip"
                        android:layout_marginTop="4.0dip"
                        android:text="Fecha Hora"
                        android:layout_marginStart="12.0dip"
                        app:layout_constraintStart_toEndOf="@id/canal_number"
                        app:layout_constraintTop_toBottomOf="@id/logo_actual" />
                    <ImageView
                        android:id="@+id/bottomFlag"
                        android:layout_width="30.0dip"
                        android:layout_height="25.0dip"
                        android:scaleType="fitEnd"
                        android:adjustViewBounds="true"
                        android:layout_marginEnd="12.0dip"
                        app:layout_constraintEnd_toStartOf="@id/fechaHora"
                        app:layout_constraintTop_toBottomOf="@id/canal_number" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.exoplayer2.ui.SimpleExoPlayerView>
            <RelativeLayout
                android:id="@+id/side_title"
                android:background="@drawable/shaper2"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="23.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="TextView"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="9.0dip"
                    android:layout_toEndOf="@id/channel_number" />
                <ImageView
                    android:id="@+id/channel_flag"
                    android:layout_width="29.0dip"
                    android:layout_height="29.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="31.0dip"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:textSize="25.0sp"
                    android:typeface="normal"
                    android:textStyle="bold"
                    android:textColor="@color/selected_background"
                    android:id="@+id/channel_number"
                    android:paddingTop="0.0dip"
                    android:paddingBottom="0.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="0.0dip"
                    android:text="999"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="0.0sp"
                    android:textAlignment="center"
                    android:layout_marginStart="9.0dip"
                    android:layout_alignParentStart="true" />
                <Button
                    android:textSize="8.0sp"
                    android:textColor="#ffffffff"
                    android:textColorHighlight="#ff820000"
                    android:id="@+id/favBTN"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="0.0dip"
                    android:focusable="true"
                    android:layout_width="131.0dip"
                    android:layout_height="34.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/agregar_a_favoritos"
                    android:layout_alignParentTop="true"
                    android:drawableStart="@drawable/starplus"
                    android:textAlignment="center"
                    android:paddingStart="5.0dip"
                    android:paddingEnd="0.0dip"
                    android:layout_marginEnd="4.0dip"
                    android:layout_toStartOf="@id/channel_flag"
                    android:elevation="1.0dip"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="0.0dip"
                    app:strokeColor="@color/rojo82"
                    app:strokeWidth="1.0dip" />
            </RelativeLayout>
        </RelativeLayout>
        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/gridEpg"
            android:background="@color/negro_gris"
            android:focusable="true"
            android:scrollbars="none"
            android:layout_width="518.0dip"
            android:layout_height="122.0dip"
            android:layout_marginTop="30.0dip"
            app:layout_constraintStart_toEndOf="@id/slide"
            app:layout_constraintTop_toBottomOf="@id/panelDerecho" />
        <EditText
            android:textColor="@color/lb_tv_white"
            android:id="@+id/programaciontxt"
            android:layout_width="227.0dip"
            android:layout_height="38.0dip"
            android:text="Programación"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginStart="144.0dip"
            app:layout_constraintStart_toEndOf="@id/slide"
            app:layout_constraintTop_toBottomOf="@id/panelDerecho" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>